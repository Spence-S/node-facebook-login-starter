extends layout

block content
  div.container
  div.row
     div.col-sm-2
     div.col-sm-8
       h1.center-block Login
       form(method="POST" action="/users/login")
         div.form-group
           label(for="email") Email:
           input.form-control(name="email" value="")
         div.form-group
           label(form="password") Password:
           input.form-control(name="password" value="")
         button.btn.btn-info(type="submit") Login
         button.btn.btn-link Signup!
